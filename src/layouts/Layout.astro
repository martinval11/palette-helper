<style is:global>
	:root {
		--background: #fff;
		--text-color: #090909; 
    --nav-border-color: #999;
    --hyperlink-color: #111;
    --icons-color: #fff;

    --random-colors-button-bg: #8c8c8c03;
    --random-colors-button-fg: #090909;
    --random-colors-button-border-color: #c6c6c6b8;
	}

	* {
		padding: 0;
		margin: 0;
	}

	*::before, *::after {
		box-sizing: border-box;
	}

  html, body {
    height: 100vh;
  }

	body {
		font-family: system-ui, sans-serif;
		background: var(--background);
		color: var(--text-color);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	@media (prefers-color-scheme: dark) {
		body {
			--background: #13151a;
			--text-color: #fff; 
      --nav-border-color: #444;
      --hyperlink-color: #ddd;
      --icons-color: #13151a;

      --random-colors-button-bg: #ffffff0d;
      --random-colors-button-fg: #fff;
      --random-colors-button-border-color: #ffffff1a;
		}
	}
</style>
